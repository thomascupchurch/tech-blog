<article class="post">
  <div class="title">
    <a href="/post/{{id}}" target="_blank">{{title}}</a>
    <br>
    <span>{{contents}}</span>
  </div>
  <div class="meta">
   {{format_plural 'point' vote_count}} by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural 'comment' comments.length}}</a>
  </div>
</article>